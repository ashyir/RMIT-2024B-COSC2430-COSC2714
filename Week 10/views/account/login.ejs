<%- include('../partials/header', { title: 'Login' }) %>
    <div class="container">
        <h2 class="text-center mb-3">Please log in to your account.</h2>
        <% if (typeof error !=='undefined' ) { %>
            <div class="alert alert-danger mb-3">
                <%= error %>
            </div>
            <% } %>
                <form action="/account/login" method="post" class="form-horizontal">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com"
                            required>
                        <label for="email">Email</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                            required>
                        <label for="password">Password</label>
                    </div>

                    <button type="submit" class="btn btn-success mb-3">Login</button>
                </form>
    </div>
    <%- include('../partials/footer') %>